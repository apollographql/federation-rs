{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "esnext.asynciterable"],
    "rootDir": "./js-src",
    "outDir": "./js-dist",
    "types": [],
    "allowJs": true,
    "strict": false,
  },
  "include": ["./js-src/**/*"],
  "exclude": ["**/__tests__"]
}
