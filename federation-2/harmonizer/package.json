  "dependencies": {
    "@apollo/composition": "2.0.2"
  },
  "peerDependencies": {
    "graphql": "^15.7.0 || ^16.0.0"
  },
  "devDependencies": {
    "@iarna/toml": "2.2.5",
    "buffer": "^6.0.3",
    "console-polyfill": "^0.3.0",
    "esbuild": "^0.14.11",
    "make-dir-cli": "^3.0.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.5.1",
    "universal-url": "^2.0.0",
    "util": "^0.12.4"
